@model Project_LucSavat.Models.Optie

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("CreateOptie", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table class="table table-bordered">
                    <tr>
                        <td>@Html.LabelFor(o => o.Naam, new { @class = "control-label" })</td>
                        <td>@Html.TextBoxFor(o => o.Naam, new { @class = "form-control" })</td>
                    </tr>
                </table>

                <input type="submit" value="Optie Aanmaken" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</div>